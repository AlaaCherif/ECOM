{% extends 'base.html.twig' %}
{% block title %} Home {% endblock %}
{% block stylesheets %}
<link rel="stylesheet" href="style.css">
<link rel="stylesheet" href="gallery.css">
{% endblock %}
{% block form %}
{{ form(form,{'label':false}) }}
{%  endblock %}


{% block body %}
    {% for message in app.flashes('success') %}
        <div class="alert alert-dismissible alert-success">
            {{ message }}
        </div>
    {% endfor %}
    <div class="container">
        {% for product in prods %}
        <div class="gallery">
        <a target="_blank" href="https://via.placeholder.com">
          <img src="https://via.placeholder.com/600x400" alt="place_holder" width="600" height="400">
        </a>
        <div class="desc">{{ product.description}}</div>
      </div>
    {% endfor %}
    </div>

{%  endblock %}
